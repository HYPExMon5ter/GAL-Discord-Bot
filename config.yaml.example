# Discord channel configuration
channels:
  # Tournament-related channels
  unified_channel: üé´tourney-registration  # Main tournament registration channel
  log_channel: bot-log                     # Bot logging channel

# Onboarding system configuration
onboard:
  # Channel settings
  main_channel: welcome                    # Welcome channel for new users
  review_channel: onboard-review           # Staff review channel for applications

  # Role settings
  role_on_approve: Angels                  # Role granted after approval

  # Embed configurations for onboarding flow
  embeds:
    main:
      title: üå∏ Welcome to Guardian Angel League!
      description: We're an inclusive community focused on creating a safe space for everyone. Please complete our onboarding process before joining the community.
      footer: Thank you for being here üíú
      color: '#f8c8dc'

    review:
      title: üìù New Onboarding Submission
      footer: Staff Review Required
      color: '#3498db'

    approved:
      title: ‚úÖ Welcome to the Community!
      description: Your onboarding has been approved! You now have access to the server. Welcome to Guardian Angel League! üå∏
      color: '#27ae60'

    denied:
      title: ‚ùå Onboarding Not Approved
      description: Your submission was reviewed but not approved at this time.
      color: '#e74c3c'

    already_approved:
      title: ‚úÖ Already Approved
      description: You already have access to the server! Welcome Angel! üíú
      color: '#27ae60'

    pending_review:
      title: ‚è≥ Submission Pending
      description: Your onboarding submission is currently being reviewed by our staff. Please wait for approval.
      color: '#f39c12'

# Discord role configuration
roles:
  # Roles allowed to use bot commands
  allowed_roles:
    - Admin
    - Moderator
    - GAL Helper

  # Tournament-specific roles
  registered_role: Registered              # Users who have registered for tournament
  checked_in_role: Checked In              # Users who have checked in for tournament
  angel_role: Angels                       # Approved community members

  # Notification settings
  ping_on_registration_open: true          # Ping when registration opens
  ping_on_checkin_open: true               # Ping when check-in opens

# User to ping for notifications (update with actual user ID)
ping_user: <@162359821100646401>

# Tournament settings
tournament:
  current_name: Curse of the Carousel      # Current tournament name (update with your current tournament)

# Google Sheets configuration
sheet_configuration:
  normal:
    sheet_url_prod: https://docs.google.com/spreadsheets/d/your_prod_sheet_id/edit
    sheet_url_dev: https://docs.google.com/spreadsheets/d/your_dev_sheet_id/edit
    header_line_num: 2                     # Row number where headers start
    max_players: 24                        # Maximum players for normal tournament

  doubleup:
    sheet_url_prod: https://docs.google.com/spreadsheets/d/your_doubleup_prod_sheet_id/edit
    sheet_url_dev: https://docs.google.com/spreadsheets/d/your_doubleup_dev_sheet_id/edit
    header_line_num: 2                     # Row number where headers start
    max_players: 32                        # Maximum players for doubleup tournament

# Bot presence settings
rich_presence:
  type: PLAYING                            # Discord activity type
  message: üõ°Ô∏è TFT                          # Status message displayed on Discord

# Bot performance settings
cache_refresh_seconds: 600                 # Cache refresh interval in seconds (10 minutes)

